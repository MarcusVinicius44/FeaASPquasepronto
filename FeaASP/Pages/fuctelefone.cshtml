<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Contato</title>
    <script>
        document.getElementById('contactForm').addEventListener('submit', function (event) {
            const telefone = document.getElementById('telefoneContato').value;
            const isValid = validarTelefone(telefone, 10); // Mínimo de 10 dígitos para telefone fixo

            if (!isValid) {
                event.preventDefault(); // Impede o envio do formulário
            } else {
                alert('Sua mensagem foi enviada para nós, obrigado!');
            }
    </script>
</head>
<body>
    <form id="contactForm" method="post">
        <div>
            <label for="telefoneContato">Número</label>
            <input type="text" id="telefoneContato" name="telefoneContato" placeholder="(XX) XXXXX-XXXX" required>
        </div>
        <button type="submit">Enviar</button>
    </form>
</body>
</html>